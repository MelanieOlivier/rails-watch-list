<p id="notice"><%= notice %></p>

<div class="container">

  <h1 class="text-center my-4">Movie Lists</h1>

  <div class="d-flex">
        <% @lists.each do |list| %>
          <div class="card mx-2 rounded" style="width: 18rem;">
            <% if list.photo.attached? %>
              <%= cl_image_tag list.photo.key, height: 200, width: 205, crop: :fill %>
            <% end %>
        <%# <img src="..." class="card-img-top" alt="..."> %>
            <div class="card-body">
              <h5 class="card-title text-center"><%= list.name %></h5>
              <%= link_to 'Show', list, class:"btn btn-success w-100" %>
            </div>
          </div>
        <% end %>
  </div>

  <br>

  <%= link_to 'Add a list', new_list_path, class:"btn btn-dark mt-5 w-30" %>

</div>
