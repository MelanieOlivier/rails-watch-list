<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Movie Lists</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.name %></td>
          <td><%= link_to 'Show', list, class:"btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add a list', new_list_path, class:"btn btn-dark" %>

</div>
